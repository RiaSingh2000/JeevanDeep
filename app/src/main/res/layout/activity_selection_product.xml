<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductSelectionActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="Product"/>
    <TextView
        android:id="@+id/pack"
        android:layout_below="@id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Packing"/>

    <TextView
        android:id="@+id/packing"
        android:layout_below="@id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/pack"
        android:layout_marginLeft="110dp"
        android:text="PackingValue"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pack"
        android:text="Quantity Available"
        android:textSize="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/qty"
        android:layout_toRightOf="@id/quantity"
        android:layout_below="@id/packing"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QuantityValue"
        />
    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NetRate"
        android:layout_below="@+id/quantity"
        android:layout_marginRight="110dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/netRate"
        android:layout_below="@id/quantity"
        android:layout_toRightOf="@id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textSize="20dp"
        android:text="NetRateValue"/>
    <TextView
        android:id="@+id/req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Required Quantity"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/netRate"
        android:layout_marginRight="100dp"/>
    <EditText
        android:id="@+id/reqQty"
        android:layout_below="@id/netRate"
        android:layout_toRightOf="@id/req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp" />
    <Button
        android:id="@+id/order"
        android:layout_below="@id/req"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/totalamt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount"
        android:layout_below="@id/order"
        android:layout_marginRight="100dp"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/amt"
        android:layout_below="@id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/totalamt"
        android:textSize="25dp" />


</RelativeLayout>